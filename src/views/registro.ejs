<!-- De esta manera incluimos el header desde el documento partials -->
<%- include('partials/_header')%> 
<article id="registro">
<div id=contenedorregistro>
  <h2>Formulario de registro</h2>

    <form action="/registro" method="post" onsubmit="return validarFormulario()">
        <div>
        <label for="contraseña">Nombre:</label>
        <input type="text" id="nombre" name="nombre">
        </div>
        <div>
        <label for="contraseña">Apellido paterno:</label>
        <input type="text" id="apellido_paterno" name="apellido_paterno">
        </div>
        <div>
        <label for="contraseña">Apellido materno:</label>
        <input type="text" id="apellido_materno" name="apellido_materno">
        </div>
        <div>
        <label for="contraseña">Correo:</label>
        <input type="text" id="correo" name="correo">
        </div>
        <div>
        <label for="contraseña">Telefono:</label>
        <input type="text" id="telefono" name="telefono">
        </div>
        <div>
        <label for="contraseña">Contraseña:</label>
        <input type="password" id="password" name="contrasena">
        </div>
        <div>
        <label for="contraseña">Estado:</label>
        <input type="text" id="estado" name="estado">
        </div>
        <div>
        <label for="contraseña">Ciudad:</label>
        <input type="text" id="ciudad" name="ciudad">
        </div>
        <input type="hidden" name="n_penalizaciones" value="0">
        <div>
        <button type="submit">Registrarse</button>
        </div>
    </form>

</div>
</article>

<%- include('partials/_footer')%>

<script>
    function validarFormulario() {
      var nombre= document.getElementById('nombre').value;
      var apellidopaterno = document.getElementById('apellido_paterno').value;
      var apellidomaterno = document.getElementById('apellido_materno').value
      var correo = document.getElementById('correo').value;
      var contrasena = document.getElementById('contrasena').value;
      var telefono = document.getElementById('telefono').value;
      var estado = document.getElementById('estado').value;
      var ciudad = document.getElementById('ciudad').value;
  
      if (nombre === '' || apellidopaterno === '' || apellidomaterno === '' || correo === '' || contrasena === '' || telefono === '' || estado === '' || ciudad === '') {
        alert('Por favor, rellena todos los campos');
        return false; // Detiene el envío del formulario
      }
  
      // Continuar con el envío del formulario si los campos están llenos
      return true;
    }
  </script>